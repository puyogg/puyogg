{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "esm",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "composite": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./esm",
    "./cjs",
    "./src/**/*.spec.ts",
    "src/types/setup-test-db.ts"
  ],
}